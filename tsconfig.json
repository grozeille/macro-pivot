{
  "extends": "./node_modules/electron-webpack/tsconfig-base.json",
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "pretty": true,
    "newLine": "LF",
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "common": ["src/common/*"]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}